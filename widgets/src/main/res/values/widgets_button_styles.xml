<resources>

    <style name="widgets_primary_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widgets_button_height_size</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:backgroundTint">@color/md_theme_light_inversePrimary</item>
        <item name="android:textSize">@dimen/widgets_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widgets_black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="widgets_secondary_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widgets_button_height_size</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:backgroundTint">@color/md_theme_dark_tertiaryContainer</item>
        <item name="android:textSize">@dimen/widgets_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widgets_black</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>